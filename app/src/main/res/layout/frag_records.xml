<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@drawable/family_bg13x"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hintmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dip"
            android:layout_marginLeft="30dip"
            android:text="训练档案"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="22dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/tuichu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xiaoguo_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_alledit"
                android:layout_width="match_parent"
                android:layout_height="110dip"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="15dip"
                    android:paddingLeft="30dip"
                    android:paddingRight="30dip"
                    android:paddingTop="27dip">

                    <TextView
                        android:layout_width="6dip"
                        android:layout_height="6dip"
                        android:background="@drawable/black_oval" />

                    <TextView
                        android:id="@+id/tv_allprogress"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="8dip"
                        android:text="总体通关进度"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:padding="6dp"
                        android:src="@drawable/home_button_right3x" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dip"
                    android:background="@drawable/pro_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="4dip">

                    <com.easychange.admin.smallrain.views.CustomHorizontalProgresNoNum
                        android:id="@+id/progress"
                        android:layout_width="0dip"
                        android:layout_height="5dip"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dip"
                        android:layout_weight="1"
                        android:progress="0"
                        app:HorizontalProgresReachColor="#29c6ec"
                        app:HorizontalProgresUnReachColor="#7c654d" />

                    <TextView
                        android:id="@+id/tv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dip"
                        android:text="0.00%"
                        android:textColor="#69471a"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shownodata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_allprogress"
                    android:layout_width="match_parent"
                    android:layout_height="110dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="15dip"
                        android:paddingLeft="30dip"
                        android:paddingRight="30dip"
                        android:paddingTop="27dip">

                        <TextView
                            android:layout_width="6dip"
                            android:layout_height="6dip"
                            android:background="@drawable/black_oval" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="8dip"
                            android:text="总体通关进度"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:padding="6dp"
                            android:src="@drawable/home_button_right3x" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dip"
                        android:background="@drawable/pro_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="4dip">

                        <com.easychange.admin.smallrain.views.CustomHorizontalProgresNoNum
                            android:layout_width="0dip"
                            android:layout_height="5dip"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:progress="0"
                            app:HorizontalProgresReachColor="#29c6ec"
                            app:HorizontalProgresUnReachColor="#7c654d" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="15dip"
                            android:text="0.00%"
                            android:textColor="#69471a"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_noun"
                    android:layout_width="match_parent"
                    android:layout_height="110dip"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="15dip"
                        android:paddingLeft="30dip"
                        android:paddingRight="30dip"
                        android:paddingTop="27dip">

                        <TextView
                            android:layout_width="6dip"
                            android:layout_height="6dip"
                            android:background="@drawable/black_oval" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="8dip"
                            android:text="Level1名词短语结构学习进度"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:padding="6dp"
                            android:src="@drawable/home_button_right3x" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dip"
                        android:background="@drawable/pro_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="4dip">

                        <com.easychange.admin.smallrain.views.CustomHorizontalProgresNoNum
                            android:layout_width="0dip"
                            android:layout_height="5dip"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:progress="0"
                            app:HorizontalProgresReachColor="#29c6ec"
                            app:HorizontalProgresUnReachColor="#7c654d" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="15dip"
                            android:text="0%"
                            android:textColor="#69471a"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_verb"
                    android:layout_width="match_parent"
                    android:layout_height="110dip"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="15dip"
                        android:paddingLeft="30dip"
                        android:paddingRight="30dip"
                        android:paddingTop="27dip">

                        <TextView
                            android:layout_width="6dip"
                            android:layout_height="6dip"
                            android:background="@drawable/black_oval" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="8dip"
                            android:text="Level2动词短语结构学习进度"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:padding="6dp"
                            android:src="@drawable/home_button_right3x" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dip"
                        android:background="@drawable/pro_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="4dip">

                        <com.easychange.admin.smallrain.views.CustomHorizontalProgresNoNum
                            android:layout_width="0dip"
                            android:layout_height="5dip"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:progress="0"
                            app:HorizontalProgresReachColor="#29c6ec"
                            app:HorizontalProgresUnReachColor="#7c654d" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="15dip"
                            android:text="0%"
                            android:textColor="#69471a"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sentence"
                    android:layout_width="match_parent"
                    android:layout_height="110dip"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="15dip"
                        android:paddingLeft="30dip"
                        android:paddingRight="30dip"
                        android:paddingTop="27dip">

                        <TextView
                            android:layout_width="6dip"
                            android:layout_height="6dip"
                            android:background="@drawable/black_oval" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="8dip"
                            android:text="Level3-1句子结构成组学习进度"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:padding="6dp"
                            android:src="@drawable/home_button_right3x" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dip"
                        android:background="@drawable/pro_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="4dip">

                        <com.easychange.admin.smallrain.views.CustomHorizontalProgresNoNum
                            android:layout_width="0dip"
                            android:layout_height="5dip"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:progress="0"
                            app:HorizontalProgresReachColor="#29c6ec"
                            app:HorizontalProgresUnReachColor="#7c654d" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="15dip"
                            android:text="0%"
                            android:textColor="#69471a"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sentencefenjie"
                    android:layout_width="match_parent"
                    android:layout_height="110dip"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="15dip"
                        android:paddingLeft="30dip"
                        android:paddingRight="30dip"
                        android:paddingTop="27dip">

                        <TextView
                            android:layout_width="6dip"
                            android:layout_height="6dip"
                            android:background="@drawable/black_oval" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="8dip"
                            android:text="Level3-2句子结构分解学习进度"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:padding="6dp"
                            android:src="@drawable/home_button_right3x" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dip"
                        android:background="@drawable/pro_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="4dip">

                        <com.easychange.admin.smallrain.views.CustomHorizontalProgresNoNum
                            android:layout_width="0dip"
                            android:layout_height="5dip"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:progress="0"
                            app:HorizontalProgresReachColor="#29c6ec"
                            app:HorizontalProgresUnReachColor="#7c654d" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="15dip"
                            android:text="0%"
                            android:textColor="#69471a"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>