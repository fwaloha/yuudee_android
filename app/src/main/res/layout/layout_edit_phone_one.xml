<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout_pt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:textSize="16sp"
            android:layout_marginTop="15dip"
            android:textColor="#14101e"
            android:text="更换手机号码"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dip"
            android:layout_marginRight="27dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/border_edt_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--   android:text="18210700961"-->
            <EditText
                android:id="@+id/et_one"
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:background="@null"
                android:drawableLeft="@drawable/sign_icon_iphone3x"
                android:drawablePadding="52dip"
                android:hint="请输入当前帐号的手机号"
                android:inputType="number"
                android:maxLength="13"
                android:paddingLeft="15dip"
                android:textColor="@color/text_tu"
                android:textColorHint="@color/text_tu"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/tv_get_belonging_to_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:text="+86 "
                android:textColor="@color/text_tu"
                android:textSize="14dip"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="80dip"
            android:background="@drawable/longbutton3x"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:text="验证"
            android:textColor="#b5ada5"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>