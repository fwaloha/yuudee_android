<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="600px"
    android:layout_marginHorizontal="30px"
    android:background="@drawable/registerer_popup_bg3x">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="150px"
        android:textSize="28px"
        android:textColor="#14101e"
        android:text="@string/question_exit"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="110px"
        android:layout_marginBottom="100px"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_ex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_button_bg"
            android:text="继续填写"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32px"
            android:textColor="@color/fff_btn_color"
            android:paddingBottom="10px"
            android:textStyle="bold"/>

        <View
            android:layout_width="58px"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_button_bg"
            android:text="确认退出"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32px"
            android:textColor="@color/fff_btn_color"
            android:paddingBottom="10px"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>