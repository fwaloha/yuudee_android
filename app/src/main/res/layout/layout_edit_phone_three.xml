<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_pt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dip"
            android:layout_marginTop="15dip"
            android:gravity="center"
            android:text="更换手机号码"
            android:textColor="#14101e"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_phone_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43px"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机号归属地"
                android:textColor="#14101e"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10px"
                android:src="@drawable/china_pic3x" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国（+86）"
                android:textColor="#c06d00"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dip"
            android:layout_marginRight="27dip"
            android:background="@drawable/border_edt_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_one"
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:background="@null"
                android:drawableLeft="@drawable/sign_icon_iphone3x"
                android:drawablePadding="12dip"
                android:hint="请输入当前账户绑定手机号码"
                android:inputType="number"
                android:maxLength="13"
                android:paddingLeft="15dip"
                android:textColor="@color/text_tu"
                android:textColorHint="@color/text_tu"
                android:textSize="14dip" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="68dp"
            android:background="@drawable/longbutton3x"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:text="下一步"
            android:textColor="#b5ada5"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>