<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_user_verify_code_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_code_iv1"
            style="@style/text_editStyle"
            android:layout_weight="1" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_tu" />

        <TextView
            android:id="@+id/item_code_iv2"
            style="@style/text_editStyle"
            android:layout_weight="1" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_tu" />

        <TextView
            android:id="@+id/item_code_iv3"
            style="@style/text_editStyle"
            android:layout_weight="1" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_tu" />


        <TextView
            android:id="@+id/item_code_iv4"
            style="@style/text_editStyle"


            android:layout_weight="1" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_tu" />


        <TextView
            android:id="@+id/item_code_iv5"
            style="@style/text_editStyle"
            android:layout_weight="1" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_tu" />


        <TextView
            android:id="@+id/item_code_iv6"
            style="@style/text_editStyle"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@android:color/transparent"
        android:digits="0123456789"
        android:inputType="number" />
</RelativeLayout>