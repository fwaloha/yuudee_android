<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@drawable/family_bg13x"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_home_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"
            android:src="@drawable/home_button3x" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/family_bg23x"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.easychange.admin.smallrain.views.CircleImageView
                android:id="@+id/img_user_data"
                android:layout_width="45dp"

                android:layout_height="45dip"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="24dp"
                android:src="@color/def_bg" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="73dp"
                android:layout_marginRight="64dp"
                android:layout_marginTop="26dp"
                android:textColor="#14101e"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_day"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/day_select"
                    android:scaleType="fitXY" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_week"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_week"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_tab_me"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_month"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_month"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_tab_map"
                    android:scaleType="fitXY" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        <!--    <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/can_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:overScrollMode="never" />
         <!--   </com.scwang.smartrefresh.layout.SmartRefreshLayout>-->

            <!--<com.canyinghao.canrefresh.CanRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <com.canyinghao.canrefresh.classic.ClassicRefreshView
                    android:id="@id/can_refresh_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.canyinghao.canrefresh.classic.ClassicRefreshView
                    android:id="@id/can_refresh_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </com.canyinghao.canrefresh.CanRefreshLayout>-->

            <RelativeLayout
                android:id="@+id/rl_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="20dp"
                    android:gravity="center_horizontal"
                    android:text="没有相关内容" />
            </RelativeLayout>
        </FrameLayout>
        <RelativeLayout

            android:background="@drawable/family_bg33x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:orientation="horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <Button
                    android:textStyle="bold"
                    android:id="@+id/btn_top_one"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button3x"
                    android:paddingBottom="5dp"
                    android:text="产品介绍"
                    android:textColor="@color/white"
                    android:textSize="14dip"
                    android:visibility="visible" />

                <Button
                    android:textStyle="bold"
                    android:id="@+id/btn_top_two"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button3x"
                    android:paddingBottom="5dp"
                    android:text="训练档案"
                    android:textColor="@color/white"
                    android:textSize="14dip"
                    android:visibility="invisible" />

                <Button
                    android:textStyle="bold"
                    android:id="@+id/btn_top_three"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button3x"
                    android:paddingBottom="5dp"
                    android:text="评估评测"
                    android:textColor="@color/white"
                    android:textSize="14dip"
                    android:visibility="invisible" />

                <Button
                    android:textStyle="bold"
                    android:id="@+id/btn_top_four"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button3x"
                    android:paddingBottom="5dp"
                    android:text="更多"
                    android:textColor="@color/white"
                    android:textSize="14dip"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <Button
                    android:visibility="invisible"
                    android:textStyle="bold"
                    android:id="@+id/btn_bottom_one"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button3x"
                    android:paddingBottom="5dp"
                    android:text="产品介绍"
                    android:textColor="@color/home_text"
                    android:textSize="14dip" />

                <Button
                    android:textStyle="bold"
                    android:id="@+id/btn_bottom_two"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button3x"
                    android:paddingBottom="5dp"
                    android:text="训练档案"
                    android:textColor="@color/home_text"
                    android:textSize="14dip" />

                <Button
                    android:textStyle="bold"
                    android:id="@+id/btn_bottom_three"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button3x"
                    android:paddingBottom="5dp"
                    android:text="评估评测"
                    android:textColor="@color/home_text"
                    android:textSize="14dip" />

                <Button
                    android:textStyle="bold"
                    android:id="@+id/btn_bottom_four"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button3x"
                    android:paddingBottom="5dp"
                    android:text="更多"
                    android:textColor="@color/home_text"
                    android:textSize="14dip" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>