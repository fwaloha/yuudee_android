<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.easychange.admin.smallrain.views.CustomTopBarNew
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp" />

    <ListView
        android:id="@+id/select_city_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="67dp"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="@color/color_transparent"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

    <com.easychange.admin.smallrain.views.MyLetterAlistView
        android:id="@+id/select_city_letter_list_view"
        android:layout_width="40dp"
        android:layout_height="400dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/color_transparent" />

</RelativeLayout>
