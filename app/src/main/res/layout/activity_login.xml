<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDEC"
    tools:context=".login.RegisterActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/login_logo"
                    android:orientation="horizontal"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30dip"
                    android:paddingRight="30dip">

                    <LinearLayout
                        android:id="@+id/layout_pt_login"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_pt_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="普通登录"
                            android:textColor="@color/text_tu"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/view_pt_login"
                            android:layout_width="80dip"
                            android:layout_height="2dip"
                            android:layout_marginTop="3dip"
                            android:background="@color/text_tu"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_kj_login"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_kj_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="快捷登录"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/view_kj_login"
                            android:layout_width="80dip"
                            android:layout_height="2dip"
                            android:layout_marginTop="3dip"
                            android:background="@color/text_tu"
                            android:visibility="invisible"></View>
                    </LinearLayout>
                </LinearLayout>
                <!--普通登录-->
                <LinearLayout
                    android:id="@+id/layout_pt_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dip"
                        android:layout_marginRight="27dip"
                        android:layout_marginTop="30dip"
                        android:background="@drawable/border_edt_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <!--   android:text="18210700961"-->
                        <EditText
                            android:id="@+id/edt_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="43dip"
                            android:background="@null"
                            android:drawableLeft="@drawable/sign_icon_iphone3x"
                            android:drawablePadding="52dip"
                            android:hint="请输入手机号"

                            android:inputType="number"
                            android:maxLength="13"
                            android:paddingLeft="15dip"
                            android:textColor="@color/text_tu"
                            android:textColorHint="@color/text_tu"
                            android:textSize="14dip" />

                        <TextView
                            android:id="@+id/tv_get_belonging_to_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40dp"
                            android:text="+86 "
                            android:textColor="@color/text_tu"
                            android:textSize="14dip"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dip"
                        android:layout_marginRight="27dip"
                        android:layout_marginTop="21dip"
                        android:background="@drawable/border_edt_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <!--    android:text="dillon66"-->
                        <!--      android:text="123456a"-->
                        <EditText
                            android:id="@+id/edt_pass"
                            android:layout_width="match_parent"
                            android:layout_height="43dip"
                            android:background="@null"
                            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                            android:drawableLeft="@drawable/set_pass"
                            android:drawablePadding="12dip"
                            android:hint="请输入密码"
                            android:inputType="textPassword"
                            android:maxLength="13"
                            android:paddingLeft="15dip"
                            android:textColor="@color/text_tu"
                            android:textColorHint="@color/text_tu"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="80dip"
                        android:background="@drawable/longbutton3x"
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingBottom="10dip"
                        android:text="登录"
                        android:textColor="#b5ada5"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="立即注册"
                            android:textColor="@color/text_tu"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0dip"
                            android:layout_height="1dip"
                            android:layout_weight="1"></View>

                        <TextView
                            android:id="@+id/tv_forget_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dip"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="忘记密码"
                            android:textColor="@color/text_tu"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
                <!--这个地方是快捷登录-->
                <LinearLayout
                    android:id="@+id/layout_kj_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dip"
                        android:layout_marginRight="27dip"
                        android:layout_marginTop="30dip"
                        android:background="@drawable/border_edt_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="27dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <!--   android:text="18210700961"-->
                            <EditText
                                android:id="@+id/edt_kj_number"
                                android:layout_width="match_parent"
                                android:layout_height="43dip"
                                android:background="@null"
                                android:drawableLeft="@drawable/sign_icon_iphone3x"
                                android:drawablePadding="52dip"
                                android:hint="请输入手机号"

                                android:inputType="number"
                                android:maxLength="13"
                                android:paddingLeft="15dip"
                                android:textColor="@color/text_tu"
                                android:textColorHint="@color/text_tu"
                                android:textSize="14dip" />

                            <TextView
                                android:id="@+id/tv_get_belonging_to_code_kj"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="40dp"
                                android:text="+86 "
                                android:textColor="@color/text_tu"
                                android:textSize="14dip"

                                />
                        </RelativeLayout>

                        <!--   <EditText

                               android:layout_width="match_parent"
                               android:layout_height="43dip"
                               android:background="@null"
                               android:drawableLeft="@drawable/sign_icon_iphone3x"
                               android:drawablePadding="12dip"
                               android:hint="+86 请输入手机号"
                               android:inputType="number"
                               android:maxLength="13"
                               android:paddingLeft="15dip"
                               android:textColor="@color/text_tu"
                               android:textColorHint="@color/text_tu"
                               android:textSize="14dip" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_image_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dip"
                        android:layout_marginRight="27dip"
                        android:layout_marginTop="21dip"
                        android:background="@drawable/border_edt_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <!--验证码输入错误-->
                        <EditText
                            android:id="@+id/edt_kj_code"
                            android:layout_width="0dip"
                            android:layout_height="43dip"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/yanzhengma"
                            android:drawablePadding="12dip"
                            android:hint="请输入验证码"
                            android:inputType="text"
                            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                            android:maxLength="6"
                            android:paddingLeft="15dip"
                            android:textColor="@color/text_tu"
                            android:textColorHint="@color/text_tu"
                            android:textSize="14dip" />

                        <ImageView
                            android:id="@+id/img_get_code"
                            android:layout_width="80dip"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dip" />

                    </LinearLayout>
                    <!--下面隐藏的布局-->
                    <LinearLayout
                        android:id="@+id/ll_qj_get_sms_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_kj_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="立即注册"
                            android:textColor="@color/text_tu"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/ll_get_verification_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="27dip"
                                android:layout_marginRight="27dip"
                                android:layout_marginTop="30dip"
                                android:background="@drawable/border_edt_bg"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_input_message_authentication_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="43dip"
                                    android:background="@null"
                                    android:drawableLeft="@drawable/sign_icon_iphone3x"
                                    android:drawablePadding="12dip"
                                    android:hint="请输入短信验证码"
                                    android:inputType="number"
                                    android:maxLength="6"
                                    android:paddingLeft="15dip"
                                    android:textColor="@color/text_tu"
                                    android:textColorHint="@color/text_tu"
                                    android:textSize="14dip" />
                                <!--    android:id="@+id/tv_qj_get_code"-->
                                <TextView
                                    android:id="@+id/tv_get_sms_code_qj"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="21dp"
                                    android:text="获取验证码"
                                    android:textColor="#c06d00"
                                    android:textSize="14sp"

                                    />

                                <!--  <TextView

                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="right"
                                      android:layout_marginBottom="18dp"
                                      android:layout_marginRight="48dp"
                                      android:layout_marginTop="10dp"
                                      android:text="获取验证码"
                                      android:textColor="#c06d00"
                                      android:textSize="14sp"

                                      />-->
                            </RelativeLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_kj_sure_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="80dip"
                        android:background="@drawable/longbutton3x"
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingBottom="10dip"
                        android:text="登录"
                        android:textColor="#b5ada5"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/register"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:gravity="center"
                        android:text="立即注册"
                        android:textColor="@color/text_tu"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_home_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dip"
                android:layout_marginTop="22dip"
                android:src="@drawable/home_button3x" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>