<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    android:layout_marginTop="60px">

    <Button
        android:id="@+id/btn_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/longbutton3x"
        tools:text="PCDI问卷"
        android:gravity="center_horizontal"
        android:paddingTop="25px"
        android:textSize="32px"
        android:textStyle="bold"
        android:textColor="@color/fff_btn_color"
        android:layout_marginBottom="30px" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26px"
        android:textColor="@color/text_black_ard"
        tools:text="1234567891234564897564561234512351231564512354423123156"
        android:lineSpacingExtra="20px"/>
</LinearLayout>