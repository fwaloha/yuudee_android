<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/popup_balloon_bg"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户输入的手机号在本产品注册绑定过,
            继续，原绑定账号自动解绑。"
            android:textColor="@color/paint_textcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="8dp"
            android:paddingRight="18dp"
            android:src="@drawable/sign_button_close3x" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_design_formulas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/paint_textcolor"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_yes"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button3x"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="继续"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>